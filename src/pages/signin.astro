---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import BtnSubmit from '../components/BtnSubmit.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Login Firebase Auth | Sign in">
	<main class="flex flex-col justify-center items-center shadow-md w-96 m-auto p-4 rounded-lg bg-white">
		<Logo />

		<form method="POST" action="">
			<h1 class="text-lg mb-3">Please sign in</h1>

			<label>
				<input 
					type="email" 
					autocomplete="username"
					id="floatingInput" 
					placeholder="name@example.com"
                    required 
					class="w-full border border-zinc-200 rounded-lg bg-zinc-50 px-3 py-1 mb-2 transition-all outline-slate-300"
				>
			</label>

			<label>
				<input 
					type="password" 
					autocomplete="current-password"
					id="floatingPassword" 
					placeholder="Password" 
                    required
					class="w-full border border-zinc-200 rounded-lg bg-zinc-50 px-3 py-1 mb-2 transition-all outline-slate-300"
				>
			</label>

            <BtnSubmit name="Sign in" />
		</form>

		<Footer/>
	</main>
</Layout>
